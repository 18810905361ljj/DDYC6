<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_content"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/backdrop"
        android:layout_width="fill_parent"
        android:layout_height="62.0dip"
        android:background="#ffffffff"
        android:fitsSystemWindows="true"
        android:orientation="horizontal"
        android:scaleType="centerCrop"
        android:src="@mipmap/init_loading">

        <RelativeLayout
            android:id="@+id/rl_scan_code"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"

            android:padding="10.0dip">

            <ImageView
                android:id="@+id/iv_scan_code"
                android:layout_width="wrap_content"
                android:layout_height="46.0dip"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_scan_code" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/iv_scan_code"
                android:orientation="vertical"
                android:paddingLeft="5.0dip">

                <TextView
                    android:id="@+id/tv_scan_code_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="扫一扫"
                    android:textColor="#ff333333"
                    android:textSize="15.0sp" />

                <TextView
                    android:id="@+id/tv_scan_code_sub_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="#ff999999"
                    android:textSize="12.0dip" />
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="0.5dip"
            android:layout_height="fill_parent"
            android:background="#ffd7d7d7" />

        <RelativeLayout
            android:id="@+id/rl_exchange"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"

            android:gravity="center"
            android:padding="10.0dip">

            <ImageView
                android:id="@+id/iv_exchange"
                android:layout_width="wrap_content"
                android:layout_height="46.0dip"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_exchange"
                />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/iv_exchange"
                android:orientation="vertical"
                android:paddingLeft="5.0dip">

                <TextView
                    android:id="@+id/tv_exchange_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="优惠码"
                    android:textColor="#ff333333"
                    android:textSize="15.0sp" />

                <TextView
                    android:id="@+id/tv_exchange_sub_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="#ff999999"
                    android:textSize="12.0dip" />
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="0.5dip"
            android:layout_height="fill_parent"
            android:background="#ffd7d7d7" />

        <RelativeLayout
            android:id="@+id/rl_order"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"

            android:gravity="center"
            android:padding="10.0dip">

            <ImageView
                android:id="@+id/iv_order"
                android:layout_width="wrap_content"
                android:layout_height="46.0dip"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_order" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/iv_order"
                android:orientation="vertical"
                android:paddingLeft="5.0dip">

                <TextView
                    android:id="@+id/tv_order_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="订单"
                    android:textColor="#ff333333"
                    android:textSize="15.0sp" />

                <TextView
                    android:id="@+id/tv_order_sub_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="#ff999999"
                    android:textSize="12.0dip" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:background="#ffd7d7d7" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10.0dip">

     <!--   <com.chediandian.widget.XKAutoScrollViewPager
            android:id="@+id/vp_banner"
            android:layout_width="fill_parent"
            android:layout_height="75.0dip"
            android:visibility="gone" />

        <com.chediandian.widget.PagerIndicator
            android:id="@id/vp_banner_indicator"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/vp_banner"
            android:paddingBottom="5.0dip"
            android:visibility="gone" />-->
<!--
        <ViewPager
            android:id="@+id/homeViewPager"
            android:layout_width="match_parent"
            android:layout_height="75dp"/>-->
    </RelativeLayout>
</LinearLayout>