<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#ffffffff"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="15.0dip">

            <ImageView
                android:id="@+id/iv_biz_avatar"
                android:layout_width="60.0dip"
                android:layout_height="60.0dip"
                android:layout_marginRight="15.0dip"
                android:src="@drawable/ic_launcher"

            />

            <LinearLayout
                android:id="@+id/ll_biz_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/iv_biz_avatar"
                android:layout_toRightOf="@id/iv_biz_avatar"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_biz_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:ellipsize="end"
                    android:includeFontPadding="false"
                    android:singleLine="true"
                    android:text="biz_name"
                    android:textColor="#ff333333"
                    android:textSize="15.0sp" />

                <ImageView
                    android:id="@+id/iv_biz_4sdian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5.0dip"
                    android:src="@drawable/ic_4sdian"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/iv_biz_you"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5.0dip"
                    android:src="@drawable/ic_you"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/iv_biz_pianyi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5.0dip"
                    android:src="@drawable/icon_pian"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/iv_biz_gaoduan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5.0dip"
                    android:src="@drawable/icon_gaoduandian"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_czpj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/iv_biz_avatar"
                android:gravity="center">

                <ImageView
                    android:id="@+id/iv_cbt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8.0dip"
                    android:paddingLeft="1.5dip"
                    android:paddingRight="1.5dip"
                    android:src="@drawable/xiaofeizhebaozhang" />

                <RatingBar
                    android:id="@+id/rb_skill_score_ax"
                    style="@style/RatingStar.aixin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0.5dip"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:visibility="gone" />

                <RatingBar
                    android:id="@+id/rb_skill_score_zs"
                    style="@style/RatingStar.zuanshi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0.5dip"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:visibility="gone" />

                <RatingBar
                    android:id="@+id/rb_skill_score_hg"
                    style="@style/RatingStar.huangguan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0.5dip"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_order_fs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2.0dip"
                    android:textColor="#ffff6600"
                    android:textSize="13.0sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="#ff999999"
                android:textSize="12.0sp" />

            <TextView
                android:id="@+id/tv_biz_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/iv_biz_avatar"
                android:layout_toLeftOf="@id/tv_distance"
                android:layout_toRightOf="@id/iv_biz_avatar"
                android:ellipsize="end"
                android:includeFontPadding="false"
                android:layout_marginTop="5dp"
                android:paddingRight="2.0dip"
                android:singleLine="true"
                android:text="tv_biz_address"
                android:textColor="#ff666666"
                android:textSize="12.0sp" />



            <TextView
                android:id="@+id/tv_order_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/ll_biz_name"
                android:layout_alignParentRight="true"
                android:paddingBottom="2.0dip"
                android:paddingTop="2.0dip"
                android:text="205å•"
                android:textColor="#ff8599aa"
                android:textSize="11.5sp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_shop_dyl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingRight="30.0dip"
                android:src="@mipmap/pic_shut" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_recommend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="18.0dip"

            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="10dp"
            android:visibility="gone" />
    </RelativeLayout>
</LinearLayout>